node('build-node') {
  checkout scm
  sh "pwd"
  sh "ls -la"
  sh "ls -la ./config"
   myYaml = readYaml file: "./config/myYamlFile.yaml"
}


pipeline {
   agent {label 'build-node'}
   stages {
      stage('Read YAML') {
         steps {
            script {
               echo "Value of key1 is ${myYaml.param.general.project}"
               echo "Value of key2 is ${myYaml.param.cicd.sourcecode.url}"
            }
         }
      }
   }
}
