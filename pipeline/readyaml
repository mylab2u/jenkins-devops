def myYaml=""
node('build-node') {
   myYaml = readYaml file: "./config/myYamlFile.yaml"
}


pipeline {
   agent {label 'build-node'}
   stages {
      stage('Read YAML') {
         steps {
            script {
               echo "Value of key1 is ${myYaml.cicd.src}"
               echo "Value of key2 is ${myYaml.sec.sonarqube}"
            }
         }
      }
   }
}
